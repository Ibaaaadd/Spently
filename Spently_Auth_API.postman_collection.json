{
  "info": {
    "name": "Spently Auth API",
    "description": "API Collection untuk testing authentication endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "register"]
            },
            "description": "Register user baru dengan email dan password"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "login"]
            },
            "description": "Login dengan email dan password, akan return token"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "Ganti {{token}} dengan token dari login"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/me",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "me"]
            },
            "description": "Get informasi user yang sedang login"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "Ganti {{token}} dengan token dari login"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/logout",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "logout"]
            },
            "description": "Logout dan hapus token"
          }
        },
        {
          "name": "Google OAuth Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"google-oauth-token-here\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/auth/google",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "google"]
            },
            "description": "Login atau register menggunakan Google OAuth token"
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/forgot-password",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "forgot-password"]
            },
            "description": "Kirim email untuk reset password"
          }
        }
      ]
    },
